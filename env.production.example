# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================

# Application Configuration
ENVIRONMENT=production
VERSION=1.0.0
BUILD_TIME=2025-07-29T21:56:59Z
PLATFORM=render

# Security
SECRET_KEY=your-super-secret-key-change-in-production
SESSION_TYPE=redis

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name
REDIS_URL=redis://localhost:6379

# AI Provider API Keys
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
PPLX_API_KEY=your-perplexity-api-key-here
AI_PROVIDER=gemini

# Server Configuration
PORT=10000
BACKEND_PORT=5055

# CORS Configuration
CORS_ORIGINS=https://ai-mental-health-assistant-tddc.onrender.com,https://*.onrender.com

# Docker Configuration
DOCKER_ENV=false
DOCKER=false

# Render Configuration
RENDER=true

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=60

# Session Management
SESSION_TIMEOUT=3600
SESSION_RENEWAL=true

# Crisis Detection
CRISIS_DETECTION_ENABLED=true
CRISIS_THRESHOLD=0.8
CRISIS_NOTIFICATION_EMAIL=admin@example.com

# Load Balancing
ENABLE_LOAD_BALANCING=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Performance
ENABLE_CACHING=true
CACHE_TTL=300
ENABLE_COMPRESSION=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
ENABLE_CSP=true
ENABLE_HSTS=true

# Backup and Recovery
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=7

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERTING_ENABLED=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
ENABLE_EMAIL_NOTIFICATIONS=true

# External Services
CRISIS_HOTLINE=988
EMERGENCY_NUMBER=911
CRISIS_TEXT_LINE=741741

# Feature Flags
ENABLE_MOOD_TRACKING=true
ENABLE_SELF_ASSESSMENT=true
ENABLE_CRISIS_RESOURCES=true
ENABLE_CHAT_HISTORY=true
ENABLE_ANALYTICS=true

# Development Overrides (for local development)
# ENVIRONMENT=local
# DOCKER_ENV=true
# PORT=5055
# DATABASE_URL=postgresql+psycopg://ai_buddy:ai_buddy_password@localhost:5432/mental_health
# REDIS_URL=redis://localhost:6379 