# Enterprise Features Configuration
# Copy this to .env and fill in your values

# Security Configuration
ENCRYPTION_MASTER_KEY=  # Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SESSION_SECRET_KEY=     # Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"

# Billing Configuration
STRIPE_SECRET_KEY=      # From Stripe dashboard
STRIPE_WEBHOOK_SECRET=  # From Stripe webhook settings
STRIPE_PRICE_ID_BASIC=  # Price ID for basic plan
STRIPE_PRICE_ID_PREMIUM= # Price ID for premium plan

# Database Configuration
DATABASE_URL=postgresql://user:pass@localhost:5432/dbname
REDIS_URL=redis://localhost:6379

# AI Providers Configuration
GEMINI_API_KEY=         # From Google Cloud Console
OPENAI_API_KEY=         # From OpenAI dashboard
PPLX_API_KEY=           # From Perplexity

# AWS Configuration (for backups)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=gentlequest-backups
AWS_REGION=us-west-2

# Monitoring Configuration
SENTRY_DSN_BACKEND=
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
PAGERDUTY_API_KEY=

# Insurance Billing
PROVIDER_NPI=           # National Provider Identifier
BILLING_TAX_ID=         # Tax ID for claims

# Feature Flags
ENABLE_AI_OPTIMIZATION=true
ENABLE_CLINICAL_DETECTION=true
ENABLE_REVENUE_SYSTEM=true
ENABLE_SECURITY_ENCRYPTION=true
ENABLE_DISTRIBUTED_SCALE=false  # Enable when ready for 100K+ users

# Admin Configuration
ADMIN_API_TOKEN=        # Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"

# Data Retention (days)
MESSAGE_RETENTION_DAYS=90
SESSION_RETENTION_DAYS=30
ANALYTICS_RETENTION_DAYS=30
CRISIS_RETENTION_DAYS=30

# Rate Limiting
RATE_LIMIT_DEFAULT=1000 per hour
RATE_LIMIT_CRISIS=unlimited
RATE_LIMIT_API=100 per minute

# Compliance
HIPAA_MODE=true
GDPR_MODE=true
DATA_RESIDENCY=US
